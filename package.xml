<?xml version="1.0" encoding="ISO-8859-1" ?>
<package version="1.0">
	<name>ingres</name>
	<summary>Extension for CA's Ingres database.</summary>
	<description>
		 This extension supports Computer Associates's Ingres Relational Database.
	</description>
	<license>PHP</license>
	<maintainers>
		<maintainer>
			<user>grant</user>
			<name>Grant Croker</name>
			<email>grantc@php.net</email>
			<role>lead</role>
		</maintainer>
	</maintainers>
	<release>
		<version>1.1.1</version>
		<date>2005-08-27</date>
		<state>alpha</state>
		<configureoptions>
			<configureoption name="with-ingres" prompt="Ingres II_SYSTEM dir?" />
		</configureoptions>
		<filelist>
			<dir name="/" baseinstalldir="ingres">
				<file role="src">ii.c</file>
				<file role="src">ii.h</file>
				<file role="src">php_ii.h</file>
				<file role="src">config.m4</file>
				<file role="src">config.w32</file>
				<file role="doc">README</file>
				<file role="doc">README.html</file>
				<file role="doc">TODO</file>
				<file role="doc">CHANGELOG</file>
				<dir name="tests" role="test">
					<file>connection.inc</file>
					<file>skipif.inc</file>
					<file>test_001.phpt</file>
					<file>test_002.phpt</file>
					<file>test_003.phpt</file>
					<file>test_004.phpt</file>
					<file>test_005.phpt</file>
					<file>test_006.phpt</file>
					<file>test_007.phpt</file>
					<file>test_008.phpt</file>
					<file>test_009.phpt</file>
					<file>test_010.phpt</file>
				</dir>
			</dir>
		</filelist>
	</release>
	<changelog>
		<release>
			<version>1.1.1</version>
			<date>2005-08-12</date>
			<state>alpha</state>
			<notes>
				Parameterized queries with ingres_query() Uses '?' as a param marker.
			</notes>
		</release>
	</changelog>
</package>

